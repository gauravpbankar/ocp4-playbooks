apiVersion: machineconfiguration.openshift.io/v1
kind: MachineConfig
metadata:
  labels:
    machineconfiguration.openshift.io/role: '{{ role_n }}'
  name: '{{ role_n }}-storage-encryption'
spec:
  config:
    ignition:
      version: 3.2.0
    storage:
      filesystems:
        - device: {{ luks.filesystem_device }}
          format: {{ luks.format }}
          label: {{ luks.name }}
          wipeFilesystem: {{ luks.wipeFileSystem }}
      luks:
        - clevis:
            tang:
{% for item in luks.config  %}
{% if item.thumbprint is not none and item.url is not none %}
              - thumbprint: {{ item.thumbprint}}
                url: {{ item.url }}
{% endif %}
{% endfor %}
            threshold: 1
          device: {{ luks.device }}
          label: {{ luks.label }}
          name: {{ luks.name }}
          options:
{% for item in luks.options %}
            - {{ item }}
{% endfor %}
          wipeVolume: {{ luks.wipeVolume }}
